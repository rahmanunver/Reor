<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Reor.Login">

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">

            <Image Source="newresized.png"   VerticalOptions="Start" HeightRequest="400"  ></Image>
            <Entry x:Name="usernameEntry" Placeholder="username"></Entry>
                    
            <Entry x:Name="passwordEntry" Placeholder="password" IsPassword="True"></Entry>
            <Button Text="Sign in" Clicked="SignInClicked" ></Button>
            <Button Text="Sign up" Clicked="SignUpClicked" ></Button>
            

               
        </StackLayout>
    </ContentPage.Content>
</ContentPage>